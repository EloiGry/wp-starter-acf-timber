<section class="my-4 md:my-8 text-gray-800">
	<div class="mx-auto py-4 my-6 space-y-2 text-center">
		<h2 class="text-5xl font-bold">{{section.title}}</h2>
		<p class="text-gray-600">{{section.description}}</p>
	</div>
	<div class="mx-auto grid justify-center gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {% for feature in section.features %}
		<div class="flex flex-col items-center p-4">
			<img
          src="{{ feature.icon }}"
          class="rounded w-12 h-12"
          alt="Hero"
        />
			<h3 class="my-3 text-3xl font-semibold">{{feature.title}}</h3>
			<div class="space-y-1 leading-tight">
				<p>{{feature.description}}</p>
			</div>
		</div>
    {% endfor %}
	</div>
</section>