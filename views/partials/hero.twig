{% if section %}
<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:items-center md:gap-8">
      <div>
        <div class="max-w-lg md:max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl">
            {{ section.title }}
          </h2>
          <p class="mt-4 text-gray-700">
            {{ section.description }} 
          </p>
        </div>
      </div>

      <div>
        <img
          src="{{ section.image }}"
          class="rounded"
          alt="Hero"
        />
      </div>
    </div>
  </div>
</section>
<div>
 <p>Voici un exemple de carousel simple :</p>

{% set slides = [
    '<div class="bg-blue-500 text-white p-8 h-64 flex items-center justify-center text-xl">Slide 1</div>',
    '<div class="bg-green-500 text-white p-8 h-64 flex items-center justify-center text-xl">Slide 2</div>',
    '<div class="bg-red-500 text-white p-8 h-64 flex items-center justify-center text-xl">Slide 3</div>',
    '<div class="bg-yellow-500 text-black p-8 h-64 flex items-center justify-center text-xl">Slide 4</div>',
    '<div class="bg-purple-500 text-white p-8 h-64 flex items-center justify-center text-xl">Slide 5</div>',
] %}


{{ function('render_carousel', {
    'items': slides,
    'slides_count': 2,
    'page_step': 2,
    'gap': 16,
    'pagination': 'dots',
    'infinite': true,
    'class': 'mb-12',
}) }}
</div>
{% endif %}